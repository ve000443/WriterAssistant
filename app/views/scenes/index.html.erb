<% provide(:title, 'All Scenes') %>
<h1>All Scenes</h1>
<h2>
<%= link_to "Create Scene", newscene_path,
                                class: "btn btn-large btn-primary" %>
</h2>

<ul class="scenes">
	<% @scenes.each do |scene| %>
   	<%= render scene %>
   	<ul>
  		<% if scene.chapter_id %>
   			<li>Take place during the Chapter nÂ° <%= "#{Chapter.find(scene.chapter_id).number} : #{Chapter.find(scene.chapter_id).title}" %></li>
   		<% end %>
	  	<li>There is <%= pluralize(scene.characters.count, "character") %> appearing in this scene</li>

		  <%= link_to "Edit", edit_scene_path(scene) %>
		  <%= link_to "Delete", scene, method: :delete,
	                                  data: { confirm: "You sure?" } %>

	  </ul>
	  <br><br>
  <% end %>
</ul>
