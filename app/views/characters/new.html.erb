<% provide(:title, 'Create Character') %>
<h1>New Character</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@character) do |f| %>
    	<%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.submit "Create character", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>