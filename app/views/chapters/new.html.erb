<h1>New Chapter</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@chapter) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :number %>
      <%= f.text_field :number %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.submit "Create chapter", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>